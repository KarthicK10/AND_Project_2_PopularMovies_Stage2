<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application name -->
    <string name="app_name">Popular Movies</string>

    <!-- Menu Strings -->
    <string name="action_settings">Settings</string>
    <!-- End Menu Strings -->

    <!-- Movie Details Strings/Constants-->
    <string name="movie_detail_release_date_format">MMM dd yyyy</string>
    <string name="movie_detail_rating_suffix">&#160;out of 10</string>
    <!-- End Movie Details Strings/Constants-->

    <!--Preference Settings -->

    <!-- Label for Sort Order Settings -->
    <string name="pref_sort_order_label">Sort Order</string>

    <!-- Key name for storing sort order in shared preferences -->
    <string name="pref_sort_order_key" translatable="false">sortOrder</string>

    <!-- Default sort order -->
    <string name="pref_sort_order_default" translatable="false">popular</string>

    <!-- Entries for Sort Order Settings-->
    <string-array name="sort_order_entries">
        <item>POPULAR</item>
        <item>TOP RATED</item>
    </string-array>


    <!--
            Entry values for Sort Order Settings
            The values refer to the end points of theMovieDB api call
            as defined in the theMovieDBAPIContract.xml resource file

            When adding new values please ensure to adhere to this process
            of adding an endpoint entry in theMovieDBAPIContract.xml and
            reference it here. This ensures we add sort orders with valid end points.

            TODO - Is there a way to enforce this by design???
         -->
    <string-array name="sort_order_entry_values">
        <item>@string/mdb_path_popular</item>
        <item>@string/mdb_path_top_rated</item>
    </string-array>


   <!-- End Preference Settings -->

</resources>
